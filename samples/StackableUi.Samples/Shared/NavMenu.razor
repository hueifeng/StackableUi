<SMenu>
    <SMenuGroup Title="基础">
        <SMenuItem Icon="ivu-icon ivu-icon-logo-youtube" Route="button">Button 按钮</SMenuItem>
        <SMenuItem Icon="ivu-icon ivu-icon-ios-heart-outline" Route="icon">Icon 图标</SMenuItem>

    </SMenuGroup>
    <SMenuGroup Title="导航">
        <SMenuItem Icon="ivu-icon ivu-icon-ios-menu" Route="menu">Menu 导航菜单</SMenuItem>
    </SMenuGroup>
    <SMenuGroup Title="表单">
        <SMenuItem Icon="ivu-icon ivu-icon-ios-create-outline" Route="input">Input 输入框</SMenuItem>
        <SMenuItem Icon="ivu-icon ivu-icon-ios-radio-button-on" Route="radio">单选框</SMenuItem>
    </SMenuGroup>

</SMenu>

@code {

    [Inject]
    NavigationManager NavigationManager { get; set; }
    protected override void OnInitialized()
    {
        if (new Uri(NavigationManager.Uri).LocalPath == "/")
        {
            NavigationManager.NavigateTo("Index");
        }
    }
}

